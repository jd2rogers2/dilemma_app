<h3><%= link_to current_user.current_dilemma.name, dilemma_path(current_user.current_dilemma) %></h3>
<h5>deadline: <%= current_user.current_dilemma.pretty_deadline %></h5>

<h4><%= @option.name %></h4>

<table>
  <tr>
    <th>factors</th>
    <th>points</th>
  </tr>
  <% @option.factors.each do |fact| %>
    <tr>
      <td><%= fact.name %></td>
      <td><%= fact.points %></td>
      <td><%= link_to "delete", factor_path(fact), method: "delete" %></td>
    </tr>
  <% end %>
</table><br>
<%= link_to "new factor", new_factor_path(option_id: @option.id) %><br>
<%= link_to "edit", edit_option_path(@option) %> | <%= link_to "delete this option", option_path(@option), method: "delete" %>