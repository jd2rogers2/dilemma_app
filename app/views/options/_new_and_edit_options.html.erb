      <%= fact.label :points %>
      <%= fact.text_field :points %>
    <% end %><br>
    <%= o.fields_for :factors, Factor.new do |fact| %>
      <%= fact.label :name %>
      <%= fact.text_field :name %>
      <%= fact.label :points %>
      <%= fact.text_field :points %>
    <% end %><br>
    <%= o.fields_for :factors, Factor.new do |fact| %>
      <%= fact.label :name %>
      <%= fact.text_field :name %>
      <%= fact.label :points %>
      <%= fact.text_field :points %>
    <% end %><br>
    <%= o.fields_for :factors, Factor.new do |fact| %>
      <%= fact.label :name %>
      <%= fact.text_field :name %>
      <%= fact.label :points %>
      <%= fact.text_field :points %>
    <% end %><br>
    <%= o.fields_for :factors, Factor.new do |fact| %>
      <%= fact.label :name %>
      <%= fact.text_field :name %>
      <%= fact.label :points %>
      <%= fact.text_field :points %>
    <% end %><br>
  <% else %>
    <%= o.fields_for :factors, option.factors do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :points %>
      <%= f.text_field :points %><br>
    <% end %><br>
  <% end %>
  <%= o.submit %>
<% end %>